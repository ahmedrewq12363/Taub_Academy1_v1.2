<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/courseItem">
    <ImageView
        android:id="@+id/icon11"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/cs2"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        android:id="@+id/secondLine"
        android:layout_width="fill_parent"
        android:layout_height="26dip"

        android:singleLine="true"
        android:text="Description"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/icon11"
        android:layout_alignBottom="@+id/icon11"
        android:layout_alignParentEnd="true" />

    <TextView

        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:gravity="center_vertical"
        android:text="Example application"
        android:id="@+id/firstline"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/secondLine"
        android:layout_alignStart="@+id/secondLine"
        android:layout_above="@+id/secondLine"
        android:textStyle="italic" />

</RelativeLayout>